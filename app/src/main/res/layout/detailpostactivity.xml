<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="0dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:padding="16dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:id="@+id/back"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_arrow_back_ios_24"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="10dp" />
                <TextView
                    android:id="@+id/textViewMiddle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:text="panipuri"
                    android:layout_marginStart="100dp"

                    android:layout_gravity="center_vertical"
                    android:textColor="#7394be"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/cardviewd"

        android:layout_below="@+id/first"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fallsss"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


    </RelativeLayout>


        <LinearLayout
            android:id="@+id/leftLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/cardviewd"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/likeimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/plainhear" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:text=" 1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/chat" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"

                android:layout_marginTop="8dp"
                android:text=" 2" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:text="TextView 2"
                android:paddingEnd="26dp"
                android:textSize="15dp" />
</RelativeLayout>

        </LinearLayout>





        <RelativeLayout
        android:id="@+id/leftLayout123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/leftLayout"
        >


        <TextView
            android:id="@+id/hastag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="5dp"


            android:text="TextView 2" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hastag"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="TextView 3"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                />

<!--            <TextView-->
<!--            android:id="@+id/username"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Text 3"-->
<!--            android:layout_marginTop="10dp"-->

<!--            android:padding="5dp"-->

<!--            android:textSize="20dp"-->

<!--            android:layout_below="@id/content"-->
<!--            android:textColor="@color/black"-->
<!--            />-->
    </RelativeLayout>
</RelativeLayout>
</ScrollView>
